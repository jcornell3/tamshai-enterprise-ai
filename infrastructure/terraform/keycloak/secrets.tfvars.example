# Keycloak Terraform - Secrets Configuration
#
# INSTRUCTIONS:
# 1. Copy this file to secrets.tfvars
# 2. Fill in your actual values
# 3. NEVER commit secrets.tfvars to git (it's gitignored)
#
# Usage:
#   terraform plan -var-file=secrets.tfvars
#   terraform apply -var-file=secrets.tfvars
#
# Alternative: Use environment variables (recommended for CI/CD):
#   export TF_VAR_keycloak_admin_password="your-password"
#   export TF_VAR_mcp_gateway_client_secret="your-secret"

# =============================================================================
# KEYCLOAK CONNECTION
# =============================================================================

# Keycloak base URL (required)
# Examples:
#   Dev:   "https://www.tamshai.local"
#   Stage: "https://vps.tamshai.com"
#   Prod:  "https://auth.tamshai.com"
keycloak_url = "https://www.tamshai.local"

# Keycloak admin credentials (required)
keycloak_admin_user     = "admin"
keycloak_admin_password = "your-secure-admin-password"

# =============================================================================
# ENVIRONMENT
# =============================================================================

# Environment name: dev, ci, stage, or prod
environment = "dev"

# =============================================================================
# CLIENT SECRETS
# =============================================================================

# MCP Gateway client secret (confidential client)
# Generate with: openssl rand -base64 32
mcp_gateway_client_secret = "your-mcp-gateway-client-secret"

# MCP HR Service client secret (for identity sync)
# Generate with: openssl rand -base64 32
mcp_hr_service_client_secret = "your-hr-service-client-secret"

# =============================================================================
# TEST USERS (Dev/Stage only)
# =============================================================================

# Password for test users (alice.chen, bob.martinez, etc.)
# DO NOT use in production!
test_user_password = "your-test-user-password"

# =============================================================================
# TLS CONFIGURATION
# =============================================================================

# Skip TLS verification (for local dev with self-signed certs)
# Set to false for stage/prod!
tls_insecure_skip_verify = true

# =============================================================================
# REDIRECT URIs
# =============================================================================

# Valid redirect URIs for MCP Gateway client
# Customize based on environment
valid_redirect_uris = [
  "http://localhost:3100/*",
  "https://www.tamshai.local/*"
]
