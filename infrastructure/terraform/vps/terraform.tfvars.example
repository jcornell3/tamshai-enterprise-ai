# Tamshai Enterprise AI - Terraform Variables
# Copy this file to terraform.tfvars and fill in your values
#
# NEVER commit terraform.tfvars to git - it contains secrets!

# =============================================================================
# CLOUD PROVIDER CONFIGURATION
# =============================================================================

# Choose your cloud provider: "digitalocean" or "hetzner"
cloud_provider = "digitalocean"

# DigitalOcean API token (get from https://cloud.digitalocean.com/account/api/tokens)
# Required if cloud_provider = "digitalocean"
do_token = "dop_v1_your_token_here"

# Hetzner Cloud API token (get from https://console.hetzner.cloud/)
# Required if cloud_provider = "hetzner"
hcloud_token = ""

# =============================================================================
# VPS CONFIGURATION
# =============================================================================

# Region
# DigitalOcean: nyc1, nyc3, sfo3, ams3, sgp1, lon1, fra1, tor1, blr1
# Hetzner: nbg1, fsn1, hel1, ash
region = "nyc1"

# VPS Size (8GB RAM recommended for all services)
# DigitalOcean: s-2vcpu-4gb (~$24/mo), s-4vcpu-8gb (~$48/mo)
# Hetzner: cx21 (~$5/mo), cx31 (~$10/mo), cx41 (~$18/mo)
vps_size = "s-4vcpu-8gb"

# Environment name (affects resource naming)
environment = "staging"

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================

# Your domain name (required)
# DNS must be configured to point to VPS IP after deployment
domain = "tamshai.example.com"

# Email for Let's Encrypt certificates (required)
email = "admin@example.com"

# =============================================================================
# APPLICATION SECRETS
# =============================================================================

# Claude API key (get from https://console.anthropic.com/settings/keys)
claude_api_key = "sk-ant-api03-your-key-here"

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# GitHub repository for deployment
github_repo = "https://github.com/jcornell3/tamshai-enterprise-ai.git"

# Git branch to deploy
github_branch = "main"

# =============================================================================
# SSH ACCESS (Optional - for emergency access only)
# =============================================================================

# IP addresses allowed for SSH access (empty = SSH disabled)
# Recommended: Keep empty for fully automated deployment
# Example: ["1.2.3.4/32", "5.6.7.8/32"]
allowed_ssh_ips = []

# Path to SSH public key (only used if allowed_ssh_ips is not empty)
ssh_public_key_path = "~/.ssh/id_rsa.pub"
