# Tamshai Enterprise AI - Terraform Variables (Example)
#
# NON-SECRET values only! All secrets must be provided via:
# - GitHub Actions secrets (for CI/CD)
# - Environment variables (TF_VAR_*)
# - HashiCorp Vault (for production)
#
# Copy this file to terraform.tfvars for local development.

# =============================================================================
# CLOUD PROVIDER CONFIGURATION
# =============================================================================

# Choose your cloud provider: "digitalocean" or "hetzner"
cloud_provider = "hetzner"

# API tokens - NEVER store here! Use environment variables:
#   export TF_VAR_hcloud_token="your-token"
#   export TF_VAR_do_token="your-token"

# =============================================================================
# VPS CONFIGURATION
# =============================================================================

# Region
# Hetzner: nbg1 (Nuremberg), fsn1 (Falkenstein), hel1 (Helsinki),
#          hil (Hillsboro OR), ash (Ashburn VA)
# DigitalOcean: nyc1, nyc3, sfo3, ams3, sgp1, lon1, fra1
region = "hil"

# VPS Size (8GB RAM recommended for all services)
# Hetzner: cpx11 (2GB), cpx21 (4GB), cpx31 (8GB), cpx41 (16GB)
# DigitalOcean: s-2vcpu-4gb, s-4vcpu-8gb
vps_size = "cpx31"

# Environment name (affects resource naming)
environment = "staging"

# =============================================================================
# DOMAIN CONFIGURATION (Cloudflare)
# =============================================================================

# Your domain name (required)
# Configure Cloudflare DNS A record to point to VPS IP after deployment
# Cloudflare SSL/TLS mode: Flexible or Full
domain = "staging.tamshai.com"

# Email for notifications
email = "admin@tamshai.com"

# =============================================================================
# APPLICATION SECRETS - ALL VIA ENVIRONMENT VARIABLES
# =============================================================================
#
# Required secrets (set via TF_VAR_* or GitHub Actions):
#   TF_VAR_claude_api_key_stage          - Anthropic Claude API key for STAGE (separate from dev!)
#   TF_VAR_hcloud_token                  - Hetzner Cloud API token
#   TF_VAR_mcp_hr_service_client_secret  - Identity sync service account secret
#
# IMPORTANT: Use a SEPARATE Claude API key for stage vs dev!
# Create keys at: https://console.anthropic.com/settings/keys
# Name them "Tamshai Dev" and "Tamshai Stage" to distinguish.
#
# Auto-generated secrets (Terraform generates if not provided):
#   - keycloak_admin_pass  - Keycloak admin password
#   - postgres_password    - PostgreSQL root password
#   - mongodb_password     - MongoDB root password
#   - minio_password       - MinIO root password
#   - jwt_secret           - JWT signing secret
#
# NEVER put actual secrets in this file!

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# GitHub repository for deployment
github_repo = "https://github.com/jcornell3/tamshai-enterprise-ai.git"

# Git branch to deploy
github_branch = "main"

# =============================================================================
# SSH ACCESS (Optional - for emergency access only)
# =============================================================================

# IP addresses allowed for SSH access (empty = SSH disabled)
# For staging: Allow all (protected by fail2ban + SSH key auth)
# For production: Restrict to specific IPs
allowed_ssh_ips = []

# Path to SSH public key (only used if allowed_ssh_ips is not empty)
ssh_public_key_path = "~/.ssh/id_rsa.pub"
