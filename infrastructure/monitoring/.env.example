# =============================================================================
# Tamshai Stage Monitor Configuration
# =============================================================================
# Copy to .env and configure before running docker compose up
# =============================================================================

# Target environment to monitor
MONITOR_TARGET_URL=https://www.tamshai.com

# Check interval in seconds
MONITOR_INTERVAL_SECONDS=60

# Discord webhook URL for alerts
# Create at: Discord Server Settings > Integrations > Webhooks > New Webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Endpoints to check (comma-separated, relative to MONITOR_TARGET_URL)
CHECK_ENDPOINTS=/api/health,/auth/realms/tamshai-corp

# Number of consecutive failures before alerting
FAILURE_THRESHOLD=3

# Send notification when service recovers after failure
RECOVERY_NOTIFY=true
