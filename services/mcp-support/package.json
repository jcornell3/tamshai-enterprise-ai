{
  "name": "mcp-support",
  "version": "1.4.0",
  "description": "MCP Support Server - Architecture v1.4 with truncation warnings and confirmations",
  "main": "dist/index.js",
  "overrides": {
    "undici": ">=6.23.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --testPathIgnorePatterns=integration --forceExit --detectOpenHandles",
    "test:integration": "jest --testPathPattern=integration --runInBand --testTimeout=60000",
    "test:all": "jest --runInBand --testTimeout=60000",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.16.1",
    "@tamshai/shared": "file:../shared",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "mongodb": "^6.3.0",
    "uuid": "^11.0.3",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.1.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
