{
  "name": "mcp-support",
  "version": "1.4.0",
  "description": "MCP Support Server - Architecture v1.4 with truncation warnings and confirmations",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --testPathIgnorePatterns=integration",
    "test:integration": "jest --testPathPattern=integration --runInBand --testTimeout=60000",
    "test:all": "jest --runInBand --testTimeout=60000",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.21.2",
    "@elastic/elasticsearch": "^8.16.1",
    "mongodb": "^6.3.0",
    "ioredis": "^5.8.2",
    "zod": "^3.24.1",
    "winston": "^3.17.0",
    "dotenv": "^16.4.7",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
