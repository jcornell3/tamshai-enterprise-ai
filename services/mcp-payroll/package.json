{
  "name": "mcp-payroll",
  "version": "1.0.0",
  "description": "MCP Server for Payroll domain - pay runs, pay stubs, contractors, tax withholdings, benefits",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "jest --testPathIgnorePatterns=integration --forceExit --detectOpenHandles",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "test:all": "jest --runInBand",
    "test:coverage": "jest --coverage --testPathIgnorePatterns=integration",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@tamshai/shared": "file:../shared",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "pg-format": "^1.0.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/pg-format": "^1.0.5",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
