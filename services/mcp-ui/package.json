{
  "name": "mcp-ui",
  "version": "1.0.0",
  "description": "MCP UI Service for Generative UI components",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "jest --testPathIgnorePatterns=integration --forceExit --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "test:all": "jest --runInBand",
    "test:coverage": "jest --coverage --testPathIgnorePatterns=integration",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@tamshai/shared": "file:../shared",
    "axios": "^1.13.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.2",
    "axios-mock-adapter": "^1.22.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.6",
    "tsx": "^4.6.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
