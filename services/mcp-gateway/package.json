{
  "name": "@tamshai/mcp-gateway",
  "version": "0.1.0",
  "description": "MCP Gateway for Tamshai Corp Enterprise AI - Routes AI queries to role-appropriate MCP servers",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "node -e \"require('fs').copyFileSync('src/openapi.yaml', 'dist/openapi.yaml')\"",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "jest --forceExit --detectOpenHandles",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "type-coverage": "type-coverage --at-least 85 --detail --ignore-catch --ignore-files \"**/*.test.ts\" --ignore-files \"**/__mocks__/**\"",
    "type-coverage:report": "type-coverage --detail --json-output > type-coverage.json"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@tamshai/shared": "file:../shared",
    "axios": "^1.13.5",
    "compression": "^1.8.1",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "google-auth-library": "^9.14.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.2",
    "mongodb": "^7.1.0",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^13.0.0",
    "winston": "^3.11.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^25.0.10",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.39.2",
    "ioredis-mock": "^8.13.1",
    "jest": "^30.2.0",
    "pg": "^8.18.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "type-coverage": "^2.27.0",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "hono": "^4.11.7"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "maxWorkers": "50%",
    "setupFiles": [
      "./jest.setup.js"
    ],
    "testMatch": [
      "**/*.test.ts",
      "**/*.spec.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/__tests__/integration/"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts",
      "!src/**/*.spec.ts",
      "!src/__tests__/**",
      "!src/test-utils/**",
      "!src/schema/**"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(uuid)/)"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 29,
        "functions": 31,
        "lines": 31,
        "statements": 31
      }
    }
  },
  "author": "Tamshai Corp",
  "license": "UNLICENSED",
  "private": true
}
